<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/buttonshapeencrypt</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="TextViews">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#05035e</item>
    </style>
    <style name="ButtonMenu">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
